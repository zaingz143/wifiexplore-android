<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selectwifi"
        android:id="@+id/view3"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/router"
        android:src="@drawable/routerselected"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PTCL-BB"
        android:id="@+id/routername"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/view3"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="15"
            android:id="@+id/textView7"
            android:layout_alignTop="@+id/view3"
            android:layout_toRightOf="@+id/router"
            android:layout_alignRight="@+id/view3"
            android:layout_alignEnd="@+id/view3"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="3.5dp"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:layout_marginRight="-35dp"
            android:textStyle="bold" />


    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>