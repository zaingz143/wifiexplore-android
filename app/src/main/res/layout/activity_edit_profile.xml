<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.dell.wifiexplorer.EditProfile">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"

            android:orientation="horizontal"
            android:tileMode="repeat">

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="19"



            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewlgo"
                android:layout_centerHorizontal="true"
                android:background="@drawable/loginlogo3"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"

            android:orientation="horizontal"
            android:tileMode="repeat">

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="6"

            android:orientation="horizontal"
            android:tileMode="repeat">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="#ffffff"

                android:text="Edit Profile"
                android:textSize="25dp"

                android:id="@+id/textView" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"

            android:orientation="horizontal"
            android:tileMode="repeat">

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true"
            android:weightSum="20"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/name"

                android:layout_marginLeft="45dp"
                android:id="@+id/imageView" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="First Name"
                android:layout_marginLeft="12dp"
                android:textSize="15dp"
                android:layout_marginRight="50dp"
                android:textColorHint="#ffffff"
                android:textColor="@color/colorText"
                android:textCursorDrawable="@color/colorCursor"
                android:background="@android:color/transparent"
                android:id="@+id/firstname" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:orientation="horizontal"
            android:tileMode="repeat">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true"
            android:weightSum="20"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/unames10"

                android:layout_marginLeft="45dp"
                android:id="@+id/imageView2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Last Name"
                android:gravity="bottom"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:layout_marginRight="50dp"
                android:textColorHint="#ffffff"
                android:textColor="@color/colorText"
                android:textCursorDrawable="@color/colorCursor"
                android:background="@android:color/transparent"
                android:id="@+id/lastname" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:orientation="horizontal"
            android:tileMode="repeat">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@android:color/white"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true"
            android:weightSum="20"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cells10"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="45dp"
                android:id="@+id/imageView4" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Cell Number"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:gravity="bottom"
                android:layout_marginRight="50dp"
                android:textColorHint="#ffffff"
                android:textColor="@color/colorText"
                android:textCursorDrawable="@color/colorCursor"
                android:background="@android:color/transparent"
                android:id="@+id/phone" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:orientation="horizontal"
            android:tileMode="repeat">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true"
            android:weightSum="20"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/passwords10"

                android:layout_marginLeft="45dp"
                android:id="@+id/imageView5" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Password"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="50dp"
                android:textColorHint="#ffffff"
                android:textColor="@color/colorText"
                android:textCursorDrawable="@color/colorCursor"
                android:background="@android:color/transparent"
                android:id="@+id/pass" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:orientation="horizontal"
            android:tileMode="repeat">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true"
            android:weightSum="20"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/passwords10"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="45dp"
                android:id="@+id/imageView6" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Retype Password"
                android:layout_marginLeft="13dp"
                android:textSize="15dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="50dp"
                android:textColorHint="#ffffff"
                android:textColor="@color/colorText"
                android:textCursorDrawable="@color/colorCursor"
                android:background="@android:color/transparent"
                android:id="@+id/cpass" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"

            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:orientation="horizontal"
            android:tileMode="repeat">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/white"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4.5"

            android:weightSum="20">


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:id="@+id/updatePro"
            android:clickable="true"

            android:background="@drawable/btnbackground2"
            android:weightSum="20">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@drawable/textcolor2"
                android:text="Update"
                android:id="@+id/textView4"
                />

        </RelativeLayout>
        <com.github.rahatarmanahmed.cpv.CircularProgressView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/progress_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/register"

            app:cpv_animAutostart="true"
            app:cpv_indeterminate="true"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</RelativeLayout>
